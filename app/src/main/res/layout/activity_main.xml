<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/diagnosa" />

        <Button
            android:id="@+id/ib_penyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:text="DAFTAR PENYAKIT"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ib_gejala" />

        <Button
            android:id="@+id/ib_gejala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:text="DAFTAR GEJALA"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ib_diagnosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:text="DIAGNOSA"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ib_informasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:text="TENTANG"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>